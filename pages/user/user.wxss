/* pages/user/user.wxss */

page {
  background: white;
}

.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  background: #5c0d12;
  width: 100%;
  padding: 50rpx 0;
}

.userinfo-avatar {
  width: 148rpx;
  height: 148rpx;
  margin: 20rpx;
  border-radius: 50%;
  border: 4rpx #fff solid;
  background: #fff;
}

.userinfo-nickname {
  color: white;
}


.icon {
    display: inline-block;
    width: 40rpx;
    height: 40rpx;
    vertical-align: top;
    margin-right: 10rpx;
}

.usermotto {
    background: #fff;
    background: rgba(255, 255, 255, 0.95);
    border-radius: 20rpx;
    box-shadow: 0 0 20rpx rgba(0, 0, 0, 0.1);
    margin: 30rpx 30rpx;
    font-size: 32rpx;
    line-height: 40rpx;
    padding: 30rpx 40rpx;
    position: relative;
}

.list_a {
  width: 100%;
  padding: 30rpx 0;
}

.list_b {
  border-top: 2rpx #f1f1f1 solid;
  padding: 30rpx 0;
}
