/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.Container {
  display: flex;
  padding: 20rpx;
}

.lost_img {
  width: 128rpx;
  height:  128rpx;
}

.lost_detail {
  display: flex;
  flex-direction: column;
  margin-left: 20rpx;
}

.lost_Name{
  font-size:  32rpx;
  color: #000;
}

.lost_label{
  font-size:  28rpx;
  color:  #000;
  margin: 8rpx 0;
}

.lost_date{
  font-size:  28rpx;
  color:  #000;
}

.lost_position{
  font-size: 32rpx;
  color: #000;
  font-weight: bold;
  position:absolute; 
  right:5%;
}

.page-section{
  font-size: 20px;
}

.center{
  text-align: center;
  color:darkgrey;
}

input{
  margin:10rpx;
  border-radius:8px;
  border:1px solid #c8cccf;
}