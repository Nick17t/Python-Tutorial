<view class="swiper-tab">
  <block wx:for="{{swipertab}}" wx:key="sptab">
    <view class="swiper-tab-list {{currtab == item.index ? 'on' : ''}}" data-current="{{item.index}}" bindtap="tabSwitch">{{item.name}}</view>
  </block>
</view>

<swiper current="{{currtab}}" class="swiper-box" duration="300" style="height:{{deviceH-31}}px" bindchange="tabChange">
  <!-- 全部 -->
  <swiper-item>
    <scroll-view class="hot-box" scroll-y="true">
      <block wx:for="{{allList}}">
        <view class="table">
          <view style="margin-left:2%;margin-right:2%;margin-top:1%">
            <view class="tr">
              <view class="userAvartar">
                <image class="userinfo-avatar" src="{{item.useravatar}}" background-size="cover" />
              </view>
              <view class="userInfo">
                <text class="userinfo-nickname">{{item.username}}</text>
              </view>
              <view class="issueType">
                {{item.issueType}}
              </view>
            </view>
            <view class="detail">
              <view class="photo">
                <image mode="widthFix" class="detailphoto" src="{{item.photos}}" />
              </view>
              <view class="description">
                <view class="description-label-view">
                  {{item.title}}
                </view>
                <view class="description-text-view">
                  <text class="description-text">{{item.text}}</text>
                </view>
              </view>
            </view>
            <view class="tr">
              <view class="position">
                <image src="../../image/map.png" class="mapIco" mode="widthFix" /> {{item.position}}
              </view>
              <view class="issueTime">
                {{item.issuedate}}
              </view>
            </view>
          </view>
        </view>
      </block>

